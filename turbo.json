{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "globalEnv": [
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_SUPABASE_URL",
    "SHOW_TAILWIND_INDICATOR",
    "NEXT_PUBLIC_VERCEL_ENV",
    "SUPABASE_SERVICE_KEY",
    "MODAL_TOKEN_SECRET",
    "ANTHROPIC_API_KEY",
    "MODAL_TOKEN_ID",
    "OPENAI_API_KEY",
    "GOOGLE_GENERATIVE_AI_API_KEY",
    "CF_ACCOUNT_ID",
    "CF_API_TOKEN",
    "BASE_URL",
    "API_URL",
    "ANALYZE",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "test": {},
    "test:watch": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}